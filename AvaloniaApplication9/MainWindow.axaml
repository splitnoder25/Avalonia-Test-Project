<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication9.MainWindow"
        Title="AvaloniaApplication9">
  <Window.Styles>
    <Style Selector="TextBlock.h1">
      <Setter Property="FontSize" Value="24"/>
      <Setter Property="FontWeight" Value="Bold"/>
      </Style>
  </Window.Styles>

  <Grid>
    <Border 
         BorderBrush="Black"
         BorderThickness="0"
         CornerRadius="3"
         Padding="4">
      <StackPanel>
        <TextBox Name="ipAddressControl1"></TextBox>
        <NumericUpDown Name="numericUpDown1"></NumericUpDown>
        <Button Name="scan_button" Click="Button_Scan">Сканировать</Button>
        <ProgressBar Name="progressBar1"></ProgressBar>
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="ListBox1"></TextBox>
      </StackPanel>
    </Border>
  </Grid>
    
</Window>
